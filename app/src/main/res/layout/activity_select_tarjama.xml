<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDCEAF"
    tools:context=".selectTarjama">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="312dp"
        android:layout_height="98dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="35dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <RadioButton
            android:id="@+id/Fateh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#60360C"
            android:text="FatehMuhammadJalandhrie"
            android:textColor="#492807" />

        <RadioButton
            android:id="@+id/Mehmood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#60360C"
            android:text="MehmoodUlHassan"
            android:textColor="#492807" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="315dp"
        android:layout_height="99dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="305dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <RadioButton
            android:id="@+id/Dr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#60360C"
            android:text="DrMohsinKhan"
            android:textColor="#492807" />

        <RadioButton
            android:id="@+id/Mufti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#60360C"
            android:text="MuftiTaqiUsmani"
            android:textColor="#492807" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="243dp"
        android:layout_height="52dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="9dp"
        android:text="SelectUrduTarajama"
        android:textColor="#492807"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="240dp"
        android:layout_height="52dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="107dp"
        android:layout_marginBottom="5dp"
        android:text="SelectEnglishTarjama"
        android:textColor="#492807"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <Button
        android:id="@+id/Proceed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="149dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="161dp"
        android:backgroundTint="#60360C"
        android:text="Proceed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2"
        />
</androidx.constraintlayout.widget.ConstraintLayout>